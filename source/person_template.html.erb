<%
    type = data.speakers.any?{ |s| s.tag == person.tag } ? "speakers" : "program-committee"
%>

<%= partial(:header, :locals => { :is_light => false }) %>

<%= partial "person_details" %>

<%= partial "newsletter" %>

<%= partial "info" %>

<%= partial "footer" %>

<% content_for :metahead do %>
    <meta name="description" content="<%= person.description %>">
    <meta name="keywords" content="<%= person.name %>, devconf, software, developers, conference">
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@devconfpl" />
    <meta name="twitter:creator" content="@devconfpl" />
    <meta prefix="og: http://ogp.me/ns#" property="og:url" content="https://devconf.pl/<%= type %>/<%= person.tag%>" />
    <meta prefix="og: http://ogp.me/ns#" property="og:type" content="website" />
    <meta prefix="og: http://ogp.me/ns#" property="og:title" content="<%= person.name %> @ DevConf 2019" />
    <meta prefix="og: http://ogp.me/ns#" property="og:description" content="<%= person.description %>" />
    <meta prefix="og: http://ogp.me/ns#" property="og:image" content="https://devconf.pl/images/people/<%= person.tag %>.png" />
    <meta property="fb:app_id" content="230234777452193" />
<% end %>